{
	"name": "react-webpack-boilerplate",
	"version": "0.0.1",
	"description": "",
	"main": "index.js",
	"scripts": {
		"start:dev": "webpack serve --config webpack.config.ts --env ENVIRONMENT=development",
		"start:staging": "webpack serve --config webpack.config.ts --env ENVIRONMENT=staging",
		"start:prod": "webpack serve --config webpack.config.ts --env ENVIRONMENT=production",
		"build:dev": "webpack --config webpack.prod.config.ts --env ENVIRONMENT=development --mode production",
		"build:prod": "webpack --config webpack.prod.config.ts --env ENVIRONMENT=production --mode production",
		"build:staging": "webpack --config webpack.prod.config.ts --env ENVIRONMENT=staging --mode production",
		"lint:js": "eslint src --ext js,ts,jsx,tsx --max-warnings=0",
		"lint:js:fix": "eslint src --ext js,ts,jsx,tsx --fix",
		"lint:all": "eslint src --max-warnings=0",
		"prepare": "husky install",
		"test": "jest --coverage false",
		"test:watch": "jest --watch",
		"test:watch:all": "jest --watchAll",
		"test:ci": "CI=true yarn test",
		"test:unit": "jest -c jest.config.unit.js",
		"test:integration": "jest -c jest.config.integration.js",
		"commit": "git-cz"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@babel/core": "^7.18.9",
		"@babel/plugin-transform-runtime": "^7.18.9",
		"@babel/preset-env": "^7.18.9",
		"@babel/preset-react": "^7.18.6",
		"@babel/preset-typescript": "^7.18.6",
		"@babel/runtime": "^7.18.9",
		"@commitlint/cli": "^17.0.3",
		"@commitlint/config-conventional": "^17.0.3",
		"@testing-library/jest-dom": "^5.16.4",
		"@testing-library/react": "^13.3.0",
		"@types/fork-ts-checker-webpack-plugin": "^0.4.5",
		"@types/jest": "^28.1.6",
		"@types/node": "^18.6.1",
		"@types/react": "^18.0.15",
		"@types/react-dom": "^18.0.6",
		"@types/webpack-dev-server": "^4.7.2",
		"@typescript-eslint/eslint-plugin": "^5.12.1",
		"@typescript-eslint/parser": "^5.12.1",
		"babel-loader": "^8.2.5",
		"clean-webpack-plugin": "^4.0.0",
		"commitizen": "^4.2.5",
		"cz-conventional-changelog": "3.3.0",
		"dotenv": "^16.0.1",
		"eslint": "^8.9.0",
		"eslint-config-prettier": "^8.4.0",
		"eslint-plugin-import-helpers": "^1.2.1",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-react": "^7.28.0",
		"eslint-plugin-react-hooks": "^4.3.0",
		"eslint-webpack-plugin": "^3.2.0",
		"fork-ts-checker-webpack-plugin": "^7.2.13",
		"html-webpack-plugin": "^5.5.0",
		"husky": ">=6",
		"jest": "^28.1.3",
		"jest-environment-jsdom": "^28.1.3",
		"lint-staged": "^13.0.3",
		"prettier": "2.5.1",
		"ts-jest": "^28.0.7",
		"ts-node": "^10.9.1",
		"typescript": "^4.7.4",
		"webpack": "^5.73.0",
		"webpack-cli": "^4.10.0",
		"webpack-dev-server": "^4.9.3"
	},
	"lint-staged": {
		"src/**/*.{js,ts,jsx,tsx,json}": [
			"yarn lint:all",
			"yarn test"
		]
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
